{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<section class="container my-3">
    <div class = 'row'>
        <div class='col'>

            <h1>Inscription</h1>

            {{ form_start(registrationForm) }}

           <fieldset>
               <legend>Mon identité</legend>
               {{ form_row(registrationForm.lastName, {
                   label: 'Nom'
               }) }}
               {{ form_row(registrationForm.firstName, {
                   label: 'Prénom'
               }) }}
           </fieldset>
            <fieldset>
                <legend>Mes coordonnées</legend>
                {{ form_row(registrationForm.ville, {
                    label: 'Ville'
                }) }}
                {{ form_row(registrationForm.codePostal, {
                    label: 'Code postal'
                }) }}
                {{ form_row(registrationForm.numTel, {
                    label: 'Numéro de téléphone'
                }) }}
            </fieldset>
            <fieldset>
                <legend>Mes identifiants</legend>
                {{ form_row(registrationForm.email, {
                    label:'E-mail'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}

                {{ form_row(registrationForm.pseudo, {
                    label: 'Nom d\'utilisateur'
                }) }}
            </fieldset>

            <button type="submit" class="btn btn-lg btn-primary my-3">S'incrire</button>

            {{ form_end(registrationForm) }}

        </div>
{% endblock %}