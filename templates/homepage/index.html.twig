{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}



<div class="container mt-2 ">
    <div class="row">
    <div class="col-3 sticky-top">
        <h1 class="h5">Ajouter un filtre</h1>
        <form id="filter">
            {% for five in allFives %}
                <p><input type="checkbox" name="five[]" id="five{{ five.id }}" value="{{ five.id }}">
                    <label for="five{{ five.id }}">{{ five.name }}</label></p>
            {% endfor %}
        </form>
    </div>
    <div class="col-6">
        {% if app.user %}
            <div class="row w-100 mx-auto rounded mt-2 mb-3 bg-light justify-content-md-center border border-success"
                 style="border-width: 0.5px;">
        <button  type="button" class="btn btn-success">Cr√©e ton propre match
            </button>
            </div>

    {% else %}

        {% endif %}

        {% for match in matches %}
            <div class="row w-100 mx-auto rounded mb-3 bg-light justify-content-md-center border border-success"
                 style="border-width: 0.5px;">

                <h1 class="h4 bg-success text-white bg-gradient p-2"> {{ match.getMatchName() }}</h1>
                <p>Organisateur : <a
                            href="{{ path('app_profil', { 'id' : match.organizer.id}) }}">{{ match.organizer.pseudo }}</a>
                </p>
                <p>Five : {{ match.five.name }}</p>
                <p>Niveau : {{ match.level }}</p>
                {% if app.user %}
                    <div class="d-flex flex-row-reverse">
                        <button type="button" class="w-25 rounded mb-2  btn btn-success">Rejoindre</button>
                    </div>
                {% endif %}


            </div>
        {% endfor %}

    </div>
<div class="col-3">

</div>
    </div>
    </div>

    {% endblock %}

