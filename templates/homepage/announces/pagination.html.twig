<div class="d-flex justify-content-center my-3">
    <nav aria-label="Page navigation ">
        <ul class="pagination">

            <li class="page-item">
                {% if currentPage != 1 %}
                    <a class="page-link" href="{{ absolute_url((currentPage - 1) ~ queryString) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                {% endif %}
            </li>

            {% for i in 1..nbPage %}
                <li class="page-item">
                    <a class="page-link" href="{{ absolute_url((loop.index) ~ queryString) }}">
                        {{ loop.index }}
                    </a>
                </li>
            {% endfor %}
            <li class="page-item">
                {% if currentPage != nbPage %}
                    <a class="page-link" href="{{ absolute_url((currentPage + 1) ~ queryString) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                {% endif %}
            </li>
        </ul>
    </nav>
</div>