{% for match in matches %}
    <div class="row w-100 mx-auto rounded mb-3 bg-light border border-success" style="border-width: 0.5px;">

        <h1 class="h4 bg-success text-white bg-gradient mb-3 p-2">
            {{ match.getMatchName() }}
        </h1>

        <p>
            <i class="bi bi-person-fill"></i> Organisateur :
            <a href="{{ path('app_profil', { 'id' : match.organizer.id}) }}">
                {{ match.organizer.pseudo }}
            </a>
        </p>

        <p>
            <i class="bi bi-house"></i> Five : {{ match.five.name }}
        </p>

        <p>
            <i class="bi bi-bar-chart-fill"></i> Niveau : {{ match.getLabelForLevel() }}
        </p>

        {% if app.user %}

            {% include 'homepage/buttons/join_match.html.twig' %}

        {% endif %}

    </div>
{% endfor %}